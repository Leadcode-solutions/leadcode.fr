---
import Layout from '../layouts/Layout.astro';


import ContainerFloatBox from '../components/ContainerFloatBox';
---

<Layout title="Leadcode">
	<div>
		<header class="header h-screen relative overflow-hidden home-hero">
			<div class="home-hero-bg-wrap">
				<div class="home-hero-bg-tiles"></div>
			</div>
			<div class="page-heading h-full">
				<div class="container-medium relative h-full">
					<ContainerFloatBox client:load/>
				</div>
			</div>
		</header>
	</div>
</Layout>

<style lang="scss" is:global>
	.header {
			position: relative;
			overflow: hidden;
			padding-top: 170px;
			padding-bottom: 80px;
			.home-hero-bg-wrap {
					position: absolute;
					left: 0;
					top: 0;
					right: 0;
					bottom: 0;
					z-index: 0;
					background-color: #222326;
					&::before {
							content: "";
							position: absolute;
							top: 0;
							bottom: 0;
							left: 0;
							right: 0;
							opacity: 1;
							will-change: background, opacity;
							transition-duration: 400ms;
							transition-timing-function: ease;
							transition-delay: 0s;
							transition-property: opacity;
							background-image: radial-gradient( 600px at var(--cursor-x) var(--cursor-y), rgba(255, 254, 241, 0.15), transparent 40%);
							background-size: auto;
							background-origin: padding-box;
							z-index: 1;
					}
			}
			.home-hero-bg-tiles {
					position: absolute;
					left: 0;
					top: 0;
					right: 0;
					bottom: 0;
					z-index: 1;
					background-image: url(https://uploads-ssl.webflow.com/63281d362a9501fa6e9f6aae/632835c8722a32c6adef674b_bg-tile.svg);
					background-position: 50% 0;
					background-size: 142px 71px;
					background-repeat: repeat;
			}
			.page-heading {
					.container-medium {
							width: 100%;
							max-width: 1136px;
							margin-left: auto;
							margin-right: auto;
							.home-hero-header {
									position: relative;
									z-index: 2;
									display: -webkit-box;
									display: -webkit-flex;
									display: -ms-flexbox;
									display: flex;
									max-width: 750px;
									margin-right: auto;
									margin-bottom: 133px;
									margin-left: auto;
									-webkit-box-orient: vertical;
									-webkit-box-direction: normal;
									-webkit-flex-direction: column;
									-ms-flex-direction: column;
									flex-direction: column;
									-webkit-box-align: center;
									-webkit-align-items: center;
									-ms-flex-align: center;
									align-items: center;
									text-align: center;
									.announcement-pill {
											position: absolute;
											top: -55px;
											display: -webkit-box;
											display: -webkit-flex;
											display: -ms-flexbox;
											display: flex;
											padding: 6px 20px;
											-webkit-box-align: center;
											-webkit-align-items: center;
											-ms-flex-align: center;
											align-items: center;
											grid-column-gap: 6px;
											border: 0.5px solid rgba(255, 254, 241, .2);
											border-radius: 100px;
											background-color: #17171a;
											-webkit-transition: background-color .2s;
											transition: background-color .2s;
											font-size: 14px;
											background-image: radial-gradient(202.04% 202.04% at 50% 111.22%, rgba(255, 254, 241, 0.2) 0%, rgba(120, 120, 120, 0.2) 23.95%);
									}
							}
							.home-hero-float-wrap {
									position: absolute;
									left: 0;
									top: -28px;
									right: 0;
									bottom: auto;
									height: 355px;
									margin-right: auto;
									margin-left: auto;
									justify-content: space-between;
									.float-item-col {
											display: flex;
											flex-direction: column;
											justify-content: space-between;
											.float-item-wrap--green {
													background-color: #50af95 !important;
													box-shadow: 0 0 100px 0 rgb(80 175 149 / 75%) !important;
													color: #50af95 !important;
													margin-bottom: 71px;
													margin-right: 71px;
													margin-left: 71px;
											}
											.float-item-wrap--red {
													background-color: #af5050 !important;
													box-shadow: 0 0 100px 0 rgba(175, 80, 80, 0.75) !important;
													color: #af5050 !important;
													margin-top: 71px;
													margin-right: 71px;
											}
											.float-item-wrap--orange {
													background-color: #af7150 !important;
													box-shadow: 0 0 100px 0 rgba(175, 120, 80, 0.75) !important;
													color: #af7b50 !important;
													margin-top: 71px;
													margin-left: 71px;
											}
											.float-item-wrap {
													position: relative;
													width: 71px;
													height: 71px;
													border-radius: 10px;
													box-shadow: 0 0 30px 0 rgb(94 124 241 / 50%);
													color: #5e7cf1;
													.float-item-line {
															position: absolute;
															left: -27px;
															top: auto;
															bottom: 0;
															background-color: currentColor;
															width: 100%;
															height: 1px;
															opacity: 0;
															animation-play-state: running;
															--distance: 1000px;
													}
													.float-item-line--top {
															left: -1px;
															top: 0;
															right: auto;
															bottom: auto
													}
													.float-item-line--left {
															left: 0;
															top: -26px;
															width: 1px;
															height: 100px
													}
													.float-item-line--right {
															left: auto;
															right: 0;
															bottom: -26px;
															width: 1px;
															height: 100px
													}
													.float-item {
															position: relative;
															z-index: 1;
															width: 71px;
															height: 71px;
															padding: 8px;
															border-radius: 10px;
															background: currentColor;
															//background: linear-gradient(180deg, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1));
															.float-item-inner {
																	display: flex;
																	width: 100%;
																	height: 100%;
																	justify-content: center;
																	align-items: center;
																	border-radius: 8px;
																	box-shadow: inset 0 0 6px 0 hsl(0deg 0% 100% / 30%);
																	.float-item-icon {
																			height: 35px;
																			width: 100%;
																	}
															}
													}
											}
									}
							}
					}
			}
	}
	
	@keyframes pulse {
			0% {
					transform: scale(1);
					opacity: 0.5;
			}
			80% {
					transform: scale(2.8);
					opacity: 0;
			}
			100% {
					transform: scale(1);
					opacity: 0;
			}
	}
	
	@keyframes float-laser-bottom {
			0% {
					transform: translateX(0px);
					opacity: 0;
			}
			12% {
					transform: translateX(0px);
					opacity: 0;
			}
			15% {
					opacity: 1;
			}
			90% {
					opacity: 1;
			}
			100% {
					transform: translateX(calc(var(--distance) * -1));
					opacity: 0;
			}
	}
	
	@keyframes float-laser-top {
			0% {
					transform: translateX(0px);
					opacity: 0;
			}
			12% {
					transform: translateX(0px);
					opacity: 0;
			}
			15% {
					opacity: 1;
			}
			90% {
					opacity: 1;
			}
			100% {
					transform: translateX(var(--distance));
					opacity: 0;
			}
	}
	
	@keyframes float-laser-left {
			0% {
					transform: translateY(0px);
					opacity: 0;
			}
			12% {
					transform: translateY(0px);
					opacity: 0;
			}
			15% {
					opacity: 1;
			}
			90% {
					opacity: 1;
			}
			100% {
					transform: translateY(calc(var(--distance) * -1));
					opacity: 0;
			}
	}
	
	@keyframes float-laser-right {
			0% {
					transform: translateY(0px);
					opacity: 0;
			}
			12% {
					transform: translateY(0px);
					opacity: 0;
			}
			15% {
					opacity: 1;
			}
			90% {
					opacity: 1;
			}
			100% {
					transform: translateY(var(--distance));
					opacity: 0;
			}
	}
	
	.float-item-wrap.animate {
			animation: float-item-bounce 2s ease;
			animation-iteration-count: 1;
	}
	
	@keyframes float-item-bounce {
			0% {
					transform: scale(1);
			}
			10% {
					transform: scale(0.85);
			}
			15% {
					transform: scale(1);
			}
			100% {
					transform: scale(1);
			}
	}
	
	.animate .float-item-line--bottom {
			animation: float-laser-bottom 2s linear;
			animation-iteration-count: 1;
	}
	
	.animate .float-item-line--top {
			animation: float-laser-top 2s linear;
			animation-iteration-count: 1;
	}
	
	.animate .float-item-line--left {
			animation: float-laser-left 2s linear;
			animation-iteration-count: 1;
	}
	
	.animate .float-item-line--right {
			animation: float-laser-right 2s linear;
			animation-iteration-count: 1;
	}
	
	.float-item-line {
			background-image: linear-gradient(-90deg transparent, currentColor, transparent);
			will-change: transform, opacity;
	}
	
	</style>
